- if @restaurants.any?
  - @restaurants.each do |restaurant|
    %h2= link_to restaurant.name, restaurant_path(restaurant)
    %h3= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)
    %h3= link_to "Edit", edit_restaurant_path(restaurant)
    %h5= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
    %h3
      Reviews for
      = restaurant.name

    - if restaurant.reviews.any?
      %ul
        - restaurant.reviews.each do |review|
          %li
            = review.thoughts
            %strong= review.rating
            \/5
    - else
      %p No reviews
- else
  %h1 No restaurants to see here
<br><br>
%a(href='/restaurants/new') Add Restaurant
